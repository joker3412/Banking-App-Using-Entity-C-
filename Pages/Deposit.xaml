<Page x:Class="BankManagementSystem.Pages.Deposit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankManagementSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Deposit">
    
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Deposit.png"></ImageBrush>
        </Grid.Background>
        <Label HorizontalAlignment="Center" FontSize="40" Foreground="#ffd200" FontWeight="Bold" Margin="0,50,0,0">DEPOSIT</Label>
        <StackPanel Background="#FFD200" Margin="209,124,210,136">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0"><Run Text="Enter Amount :" FontWeight="Bold" /></TextBlock>
            <TextBox Height="20" Width="300" Text="{Binding Amount}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
            <Button x:Name="BTN_dELETE" Command="{Binding DepositCommand}" Background="DodgerBlue" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="60" Margin="0,20,0,0" Foreground="White" Content="Deposite"/>
        </StackPanel>
    </Grid>
</Page>