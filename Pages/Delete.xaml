<Page x:Class="BankManagementSystem.Pages.Delete"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankManagementSystem.Pages" xmlns:viewmodel="clr-namespace:BankManagementSystem.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:NewAccountViewModel}"
      mc:Ignorable="d" 
     
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Delete">

    <Grid  Background="#51173D">
        <TextBlock Foreground="#FFD200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,173,0,0" FontWeight="Bold"> IT WILL DELETE ALL THE DATA FROM THE RESPECTIVE ACCOUNT !!!</TextBlock>
        <Button x:Name="BTN_dELETE" Command="{Binding DeleteCommand}" Background="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,225,0,0" Height="30" Width="120" FontWeight="Bold" Foreground="White">CONFIRM DELETE</Button>

    </Grid>
</Page>
